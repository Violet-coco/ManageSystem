<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        cardview:cardCornerRadius="4dp"
        cardview:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stu_line"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:text="1"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="30dp"

                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stu_name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="王珊珊（3120150905119）"
                    android:textColor="@color/blue_light"/>

                <TextView
                    android:id="@+id/stu_pName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="基于Android的健身APP"
                    android:textColor="@color/blue_light"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/stu_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="8dp"
                        android:layout_weight="1"
                        android:text="成绩：90"
                        android:textColor="@android:color/black"
                        />

                    <Button
                        android:id="@+id/look_title"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:text="设为优秀"
                        android:layout_marginTop="4dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@android:color/white"
                        android:background="@drawable/read_bt_bg"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>